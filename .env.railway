# Railway Environment Variables
# Copiar estas variables a Railway Dashboard

# Application Configuration
APP_NAME=Kopi Chatbot API
APP_VERSION=2.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO
API_TIMEOUT_SECONDS=30

# Railway automatically provides PORT, but we can set default
PORT=8000
HOST=0.0.0.0

# Redis Configuration (Railway provides this)
# REDIS_URL será automáticamente configurado por Railway cuando agregues Redis service
REDIS_DB=0
REDIS_DECODE_RESPONSES=true

# Conversation Settings
CONVERSATION_TTL_SECONDS=86400
MAX_CONVERSATION_MESSAGES=10

# OpenAI API Configuration
# ⚠️ IMPORTANTE: Configura tu clave real de OpenAI aquí
OPENAI_API_KEY=tu_clave_openai_aqui
OPENAI_ENABLED=true
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# =============================================================================
# ANTHROPIC CLAUDE API CONFIGURATION (RECOMMENDED - PRIMARY)
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_ENABLED=true
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=200
ANTHROPIC_TIMEOUT=30
AI_PROVIDER= anthropic

# Meta-Persuasion Configuration
META_PERSUASION_ENABLED=true
EDUCATIONAL_MODE_ENABLED=true
EDUCATIONAL_CONTENT_FREQUENCY=0.3

# Debate Service Configuration
DEBATE_EDUCATIONAL_MODE=true
DEBATE_ANALYSIS_ENABLED=true

# CORS Configuration for production
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Security Configuration
MAX_MESSAGE_LENGTH=2000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Railway specific
RAILWAY_STATIC_URL=
RAILWAY_GIT_COMMIT_SHA=